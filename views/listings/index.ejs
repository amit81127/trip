<% layout("/layouts/boilerplate")%>
<style>
  #filters{
    margin-top: 1rem;
    align-items: center;
  }
  .filter{
    display: flex;
    text-align: center;
    margin-right: 3rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .icon{
    margin-right: 2rem;
    opacity: 0.7;
  }
  .icon:hover{
    opacity: 1;
    cursor: pointer;
  }
  
  .icon p{
    font-size:0.8rem;
  }
   .tax-info{
    display: none;
   }
   .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 10px;
    margin-left: 5rem;
    display: flex;
    align-items: center;
   }
  
</style>
    <div id="filters">
      <div class="filter">
        <div class="icon"><i class="fa-solid fa-fire"></i>
         <p>Trending</p></div>
         <div class="icon"><i class="fa-solid fa-bed"></i>
         <p>Rooms</p></div>
         <div class="icon"><i class="fa-solid fa-mountain-city"></i>
          <p>Iconic city</p></div>
          <div class="icon"><i class="fa-solid fa-mountain-sun"></i>
            <p>Moutains</p></div>
            <div class="icon"><i class="fa-brands fa-fort-awesome"></i>
              <p>Castles</p></div>
              <div class="icon"><i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pools</p></div>
                <div class="icon"><i class="fa-solid fa-campground"></i>
                  <p>Camping</p></div>
                  <div class="icon"><i class="fa-solid fa-tractor"></i>
                    <p>Farmes</p></div>
                    <div class="icon"><i class="fa-solid fa-snowflake"></i>
                      <p>Artic pools</p></div>
                      <div class="icon"><i class="fa-solid fa-person-shelter"></i>
                        <p>Your choise</p></div>
                        <div class="icone"><i class="fa-solid fa-gopuram"></i>
                          <p>Near Temple</p></div>
                      <div class="tax-toggle">
                        <div class="form-check-reverse form-switch">
                          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                          <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
                        </div>
                      </div>

      </div>
      

    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%=listing.image.url%>"  class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-image-overlay"></div>
                <div class="card-body">
                  <p class="card-text"><b><%=listing.title%></b><br> &#8377; <%=  listing.price.toLocaleString("en-IN")%><i class="tax-info">&nbsp; +18% GST</i></p>
                </div>
              </div>
              <%}%>
            </a>
    </div>
   

  <script>
    let taxSwitch = document.getElementById('flexSwitchCheckDefault');
    taxSwitch.addEventListener('change', (event) => {
      let taxInfo = document.getElementsByClassName('tax-info');
      for(info of taxInfo){
        if(info.style.display === "inline"){
          info.style.display = "none"
          continue;
        }else{
          info.style.display = "inline"
        }
        
      }
    })
  </script>

